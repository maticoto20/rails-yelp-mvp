<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> (<%= review.rating %>)</li>
  <% end %>
</ul>
<%= link_to 'Add review', new_restaurant_review_path(@restaurant), class:"btn btn-warning" %>
<p><%= link_to '< Restaurants', :restaurants, class:"btn btn-primary" %></p>
